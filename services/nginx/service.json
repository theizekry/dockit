{
    "1.25": {
        "build": {
            "base_image": "nginx:1.25-alpine",
            "command": "nginx -g 'daemon off;'"
        },
        "compose": {
            "ports": ["80:80", "443:443"]
        },
        "files": {
            "nginx.conf": {
                "source": "conf/{version}/nginx.conf",
                "destination": "/etc/nginx/nginx.conf"
            },
            "default.conf": {
                "source": "conf/{version}/default.conf",
                "destination": "/etc/nginx/conf.d/default.conf"
            }
        }
    }
} 